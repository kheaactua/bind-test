{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "displayName": "Default Config",
      "cacheVariables": {
        "MULTICAST_ADDR": {
          "type": "STRING",
          "value": "224.2.127.254"
        },
        "CMAKE_INSTALL_MESSAGE": {
          "type": "STRING",
          "value": "LAZY"
        }
      }
    },
    {
      "name": "linux",
      "inherits": "default",
      "hidden": true,
      "displayName": "Linux Config",
      "description": "Linux build using Ninja generator",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "pdc",
      "inherits": "default",
      "hidden": true,
      "displayName": "PDC-QNX Config",
      "condition": {
        "type": "notEquals",
        "lhs": "$env{QNX_HOST}",
        "rhs": ""
      }
    },
    {
      "name": "vp1",
      "inherits": "pdc",
      "displayName": "vp1 interface on PDC (corresponds to AOSP-system)",
      "description": "vp1 interface on PDC",
      "binaryDir": "${sourceDir}/build/vp1",
      "cacheVariables": {
        "INTERFACE_IP": {
          "type": "STRING",
          "value": "10.7.0.3"
        },
        "INTERFACE_NAME": {
          "type": "STRING",
          "value": "vp1"
        }
      }
    },
    {
      "name": "vp2",
      "inherits": "pdc",
      "displayName": "vp2 interface on PDC (corresponds to AOSP-vendor)",
      "description": "vp2 interface on PDC",
      "binaryDir": "${sourceDir}/build/vp2",
      "cacheVariables": {
        "INTERFACE_IP": {
          "type": "STRING",
          "value": "10.6.0.3"
        },
        "INTERFACE_NAME": {
          "type": "STRING",
          "value": "vp2"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "pdc",
      "hidden": true,
      "condition": {
        "type": "notEquals",
        "lhs": "$env{QNX_HOST}",
        "rhs": ""
      }
    },
    {
      "name": "vp1",
      "inherits": "pdc",
      "configurePreset": "vp1"
    },
    {
      "name": "vp2",
      "inherits": "pdc",
      "configurePreset": "vp2"
    }
  ]
}
